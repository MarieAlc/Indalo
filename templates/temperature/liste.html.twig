{% extends 'base.html.twig' %}

{% block title %}Historique des températures{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Historique des températures</h1>

    {% if groupedTemperatures is empty %}
        <p>Aucune température enregistrée.</p>
    {% else %}
        {% for date, temps in groupedTemperatures %}
            <h3>{{ date }}</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Matériel</th>
                        <th>Température (°C)</th>
                    </tr>
                </thead>
                <tbody>
                    {% for temp in temps %}
                        <tr>
                            <td>{{ temp.materiel }}</td>
                            <td>{{ temp.valeur }} °</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endfor %}
    {% endif %}

    <a href="{{ path('app_temperature') }}">← Retour au suivi</a>
</div>
{% endblock %}
