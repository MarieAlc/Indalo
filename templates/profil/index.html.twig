{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
<section class="section">
    <h1 class="section-title">👤 Mon profil</h1>

    <div class="profil-info">
        <p><span class="icon-label">🪪 Nom :</span> {{ app.user.nom }}</p>
        <p><span class="icon-label">🧍‍♀️ Prénom :</span> {{ app.user.prenom }}</p>
        <p><span class="icon-label">📧 Email :</span> {{ app.user.email }}</p>
        <p><span class="icon-label">🎓 Qualification :</span> {{ app.user.qualification }}</p>
    </div>
</section>


<section class="section profil-actions">
    <h2 class="section-subtitle">⚙️ Actions</h2>
    <div class="actions-row">
        <a href="{{ path('app_profil_modifier') }}" class="action-link">✏️ Modifier mes informations</a>
        <a href="{{ path('app_profil_password') }}" class="action-link">🔒 Modifier mon mot de passe</a>
    </div>
</section>
{% endblock %}
