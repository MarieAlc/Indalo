{% extends 'base.html.twig' %}

{% block title %}Bienvenue{% endblock %}

{% block body %}


<div>
    <h1>Bienvenue sur votre outils de gestion</h1>

    <p>Ce site vous permet de suivre la température de vos produits, de gérer la traçabilité et bien plus encore.</p>
    <p>Pour commencer, veuillez vous connecter.</p>
</div>

{% if app.user %} 
<div>
    <h1>Tableau de bord</h1>

    <h2>Tâches non validées</h2>
    {% if tachesNonValidees is empty %}
        <p>Aucune tâche non validée.</p>
    {% else %}
        <ul>
            {% for tache in tachesNonValidees %}
                <li>{{ tache.nom }} - {{ tache.date|date('d/m/Y') }}</li>
            {% endfor %}
        </ul>
    {% endif %}
</div> 

        <h2>Catégories</h2>
        <div style="display: flex; gap: 1rem;">
            <div style="background: #f0f0f0; padding: 1rem; border-radius: 8px;">
                <a href="{{path('app_temperature')}}">
                    <strong>Températures</strong>
                    <p>Contôle des températures des frigo</p>
                </a>
            </div>

            <div style="background: #f0f0f0; padding: 1rem; border-radius: 8px;">
                <a href="#">
                    <strong>Congélation</strong>
                    <p>Entrez vos date de congélation</p>
                </a>
            </div>

            <div style="background: #f0f0f0; padding: 1rem; border-radius: 8px;">
                <a href="#">
                    <strong>Nettoyage</strong>
                    <p>Suivis entretiens de la cuisine</p>
                </a>
            </div>

            <div style="background: #f0f0f0; padding: 1rem; border-radius: 8px;">
                <a href="#">
                    <strong>Traçabilités</strong>
                    <p>Suivre vos produits</p>
                </a>
            </div>
           
        </div>
{% endif %}


{% endblock %}
